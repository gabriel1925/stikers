<table id="table_id" class=" table table-hover table-striped mx-1">
    <thead class="thead-dark">
        <tr>
            <th class="text-center">Numero de remito</th>
            <th class="text-center">Empresa</th>
            <th class="text-center">Factura</th>
            <th class="text-center">Imprimir</th>
            <th class="text-center">Modificar</th>
    </thead>
    <tbody>
      {{#each remitosjson}}
        <tr>
          <td class="text-center">
            {{nremito}}
          </td>
          <td class="text-center">{{empresa}}</td>
          <td class="text-center">{{nfactura}}</td>
          <td class="text-center">
            <a href="/impresiones/{{nremito}}" class="btn btn-success">Imprimir {{nremito}}</a>
          </td>
          <td class="text-center">
            <a href="#" class="btn btn-danger">Agregar articulo</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
</table>

<link rel="stylesheet" type="text/css" href="/public/dataTable/datatables.min.css"/>
 
<script type="text/javascript" src="/public/dataTable/datatables.min.js"></script>




